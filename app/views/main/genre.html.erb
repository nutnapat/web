<style>
h1 {text-align: center;}
p {text-align: center;}


.card {
  box-shadow: 0 4px 8px 0 rgba(0,0,0,0.2);
  transition: 0.3s;
  width: 200px;
  higth: 200px;
  text-align: center;
}


.card:hover {
  box-shadow: 0 8px 16px 0 rgba(0,0,0,0.2);
}

.container {
  padding: 2px 16px;
}
</style>

<h1>Genre</h1>
<div class="btn-group d-flex justify-content-center" role="group" aria-label="Basic example">
	<% @tags.each do |tag| %>
		<a class="btn btn-outline-primary" href="/genre?q=<%=tag.name%>" ><%=tag.name%></a>
	<%end%>
</div>

<div class="row justify-content-center">
  <% @cartoons.each do |cartoon| %>
  <div class="card justify-content-center m-3">
    <% if cartoon.image.attached?%>
    <%= image_tag(cartoon.image, style:'width:200px, height:200px')%>
    <%else%>
    <%= image_tag("logo.png", style:'width:200px, height:200px')%>
    <%end%>
    <h4><b><%= link_to "#{cartoon.name}","/#{cartoon.name}" %></b></h4>
    <p><%= cartoon.tags %></p>
    <p><%= cartoon.shortinfo %></p> 
  </div>
  <% end %>
</div>

