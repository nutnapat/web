<h1>Log In</h1>

<%= form_with url: login_path do |form| %>
  <div class="mb-3">
    <%= form.label :email %>
    <%= form.text_field :email ,class:"form-control" , placeholder:"nut@lnwza.com" %>
  </div>
  <div class="mb-3">
    <%= form.label :password %>
    <%= form.password_field :password ,class:"form-control" , placeholder:"password" %>
  </div> 
  <div class="btn-group">
    <div class="mb-3">
      <%= form.submit "Login" , class:"btn btn-primary" %>
    </div>
    <div class="mb-3 mx-3" >
      <a class="btn btn-link" href="/sign_up" >Sign Up</a>
    </div>
  </div>
  
<% end %>

